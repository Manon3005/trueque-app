{
  "name": "trueque-app-backend",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx prisma generate",
    "db:setup": "npx prisma migrate dev --name init",
    "db:reset": "npx prisma migrate reset",
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/generated/prisma/** dist/",
    "start": "node dist/server.js"
  },
  "author": "manon",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "copyfiles": "^2.4.1",
    "prisma": "^6.17.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}
